{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "dist",
		"sourceMap": true,

		"paths": {
			"@/*": ["./*"],
			"@common/*": ["../common/*"]
		}
	},
	"include": [ "./src/**/*" ]
}